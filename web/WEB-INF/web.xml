<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AllUserController</servlet-name>
        <servlet-class>controller.AllUserYouMayKnowController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserInfor</servlet-name>
        <servlet-class>controller.UserInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddFriendController</servlet-name>
        <servlet-class>controller.AddFriendController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllRequestFriendSent</servlet-name>
        <servlet-class>controller.ShowFriendController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CancelRequestFriendController</servlet-name>
        <servlet-class>controller.CancelRequestFriendController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllUserController</servlet-name>
        <url-pattern>/AllUserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserInfor</servlet-name>
        <url-pattern>/UserInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddFriendController</servlet-name>
        <url-pattern>/AddFriendController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllRequestFriendSent</servlet-name>
        <url-pattern>/AllRequestFriendSent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CancelRequestFriendController</servlet-name>
        <url-pattern>/CancelRequestFriendController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
